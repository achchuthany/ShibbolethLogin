# Backend Environment Variables Template
# Copy this file to .env and update with your values

# Application Configuration
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:3000

# JWT Configuration
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_here_64_chars_minimum
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_64_chars_minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
# Generate secure session secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_super_secure_session_secret_key_here_64_chars_minimum
SESSION_MAX_AGE=3600000

# Shibboleth IdP Configuration (JFN University)
IDP_SSO_URL=https://idp.jfn.ac.lk/idp/profile/SAML2/Redirect/SSO
IDP_SLO_URL=https://idp.jfn.ac.lk/idp/profile/SAML2/Redirect/SLO
IDP_METADATA_URL=https://idp.jfn.ac.lk/idp/shibboleth

# Service Provider Configuration
SP_ENTITY_ID=http://localhost:5001/metadata
SP_CALLBACK_URL=http://localhost:5001/api/auth/callback
SP_LOGOUT_CALLBACK_URL=http://localhost:5001/api/auth/logout/callback

# IdP Certificate (Base64 encoded, single line, no BEGIN/END headers)
# Extract from: curl -s https://idp.jfn.ac.lk/idp/shibboleth
# Look for <ds:X509Certificate> content
IDP_CERT=your_idp_certificate_base64_encoded_here

# Security Configuration (Optional)
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Logging Configuration (Optional)
LOG_LEVEL=info
DEBUG_ENABLED=true
